<% provide(:title, 'All Users') %>
<h1>管理者のタスク一覧</h1>

 <input type="submit" value="タスク新規作成"> 
 <br> 
 <table class="table table-bordered table-condensed table-hover">      
   <tbody>
     <thead>
      <tr>名称</tr>
      <tr>作成日</tr>
     </thead> 
   
   
     <tr>
      <td>
       <div class="main-posts-index">
        <div class="container">     
         <% @posts.each do |post| %>
          <div class="posts-index-item">
           <%= post.content %>
           <%= post.created_at.strftime('%Y/%m/%d') %>
           <%= link_to "編集", " ", class: "post_edit_button" %>
           <%= link_to "削除", " ", class: "post_delete_button" %>
          </div>
         <% end %>
        </div>
       </div> 
      </td>
     </tr>
　　
　
    </tbody>     
   </table>
  
  